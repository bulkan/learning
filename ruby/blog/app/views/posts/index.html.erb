<h1>Listing posts</h1>

<table cellspacing="0">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
  </tr>
  <%= @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
  </tr>
  <% end %>
</table>
